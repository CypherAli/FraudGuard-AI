<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FraudGuardAI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FraudGuardAI"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#0D1B2A"
    Shell.TabBarForegroundColor="#E0E6ED"
    Shell.TabBarUnselectedColor="#5C6B7A"
    Shell.TabBarTitleColor="#E0E6ED">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor" Value="#0D1B2A"/>
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Protection"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage">
            <ShellContent.Icon>
                <FontImageSource
                    Glyph="○"
                    Size="24"
                    Color="#E0E6ED"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="History"
            ContentTemplate="{DataTemplate local:HistoryPage}"
            Route="HistoryPage">
            <ShellContent.Icon>
                <FontImageSource
                    Glyph="◎"
                    Size="24"
                    Color="#E0E6ED"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage">
            <ShellContent.Icon>
                <FontImageSource
                    Glyph="⚙"
                    Size="24"
                    Color="#14B8A6"/>
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>

</Shell>
