            <Grid>
                <!-- Loading -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                  IsRunning="False"
                                  IsVisible="False"
                                  Color="{StaticResource PrimaryBlue}"
                                  VerticalOptions="Center"
                                  HorizontalOptions="Center"
