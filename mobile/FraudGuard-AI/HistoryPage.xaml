                <!-- Call List -->
                <CollectionView x:Name="HistoryCollectionView"
                               ItemsSource="{Binding CallLogs}"
                               SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:CallLog">
                            <Border BackgroundColor="{StaticResource CardBg}"
                                   StrokeThickness="0"
                                   Padding="16">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16"/>
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="#000000"
                                           Opacity="0.2"
                                           Radius="12"
                                           Offset="0,4"/>
                                </Border.Shadow>

                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                                    
                                    <!-- Risk Badge -->
                                    <Border Grid.Row="0" Grid.Column="0"
                                           BackgroundColor="{Binding RiskScoreColor}"
                                           Padding="12,6"
                                           HorizontalOptions="Start"
                                           StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8"/>
                                        </Border.StrokeShape>
                                        <Label Text="{Binding RiskLevelDisplay}"
                                              FontSize="12"
                                              FontAttributes="Bold"
                                              TextColor="White"/>
                                    </Border>

                                    <!-- Risk Score -->
                                    <Border Grid.Row="0" Grid.Column="1"
                                           BackgroundColor="{Binding RiskScoreColor}"
                                           Padding="12,8"
                                           StrokeThickness="0"
                                           Opacity="0.2">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10"/>
                                        </Border.StrokeShape>
                                    </Border>
                                    <Label Grid.Row="0" Grid.Column="1"
                                          Text="{Binding RiskScore, StringFormat='{0}%'}"
                                          FontSize="20"
                                          FontAttributes="Bold"
                                          TextColor="{Binding RiskScoreColor}"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center"/>

                                    <!-- Time & Duration -->
                                    <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="12">
                                        <HorizontalStackLayout Spacing="6">
                                            <Label Text="ðŸ•" FontSize="12"/>
                                            <Label Text="{Binding TimeDisplay}"
                                                  FontSize="13"
                                                  TextColor="{StaticResource TextSecondary}"/>
                                        </HorizontalStackLayout>
                                        <Label Text="â€¢" TextColor="{StaticResource TextSecondary}" FontSize="13"/>
                                        <Label Text="{Binding DurationDisplay}"
                                              FontSize="13"
                                              TextColor="{StaticResource TextSecondary}"/>
                                    </HorizontalStackLayout>

                                    <!-- Evidence -->
                                    <VerticalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="4">
                                        <Label Text="Báº±ng chá»©ng"
                                              FontSize="11"
                                              FontAttributes="Bold"
                                              TextColor="{StaticResource TextSecondary}"
                                              Opacity="0.8"/>
                                        <Label Text="{Binding Evidence}"
                                              FontSize="13"
                                              TextColor="{StaticResource TextPrimary}"
                                              LineBreakMode="TailTruncation"
                                              MaxLines="2"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Error State -->
                <VerticalStackLayout x:Name="ErrorView"
                                    IsVisible="False"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Spacing="16">
                    
                    <Border WidthRequest="80"
                           HeightRequest="80"
                           BackgroundColor="#7F1D1D"
                           StrokeThickness="0"
                           HorizontalOptions="Center">
                        <Border.StrokeShape>
