                <!-- Empty State -->
                <VerticalStackLayout x:Name="EmptyStateView"
                                    IsVisible="False"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Spacing="16">
                    
                    <Border WidthRequest="80"
                           HeightRequest="80"
                           BackgroundColor="{StaticResource CardBackground}"
                           StrokeThickness="0"
