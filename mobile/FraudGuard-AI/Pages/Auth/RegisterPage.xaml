<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FraudGuardAI.Pages.Auth.RegisterPage"
             BackgroundColor="#0D1B2A"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            
            <!-- Back Button -->
            <Button Text="← Quay lại"
                    BackgroundColor="Transparent"
                    TextColor="#34D399"
                    FontSize="16"
                    HorizontalOptions="Start"
                    Clicked="OnBackClicked"
                    Margin="0,20,0,0"/>

            <!-- Title -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,30">
                <Label Text="Tạo tài khoản" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="#E0E6ED"
                       HorizontalOptions="Center"/>
                <Label Text="Đăng ký để bắt đầu bảo vệ cuộc gọi" 
                       FontSize="16" 
                       TextColor="#8B95A5"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Phone Number Input -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Số điện thoại" 
                       TextColor="#E0E6ED" 
                       FontSize="14"
                       FontAttributes="Bold"/>
                <Frame BackgroundColor="#1B2838" 
                       BorderColor="#2D3E50" 
                       CornerRadius="12" 
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="PhoneEntry"
                           Placeholder="+84 xxx xxx xxx"
                           PlaceholderColor="#5C6B7A"
                           TextColor="#E0E6ED"
                           Keyboard="Telephone"
                           FontSize="16"
                           Margin="15,10"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Password Input -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Mật khẩu (tùy chọn)" 
                       TextColor="#E0E6ED" 
                       FontSize="14"
                       FontAttributes="Bold"/>
                <Frame BackgroundColor="#1B2838" 
                       BorderColor="#2D3E50" 
                       CornerRadius="12" 
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Nhập mật khẩu"
                           PlaceholderColor="#5C6B7A"
                           TextColor="#E0E6ED"
                           IsPassword="True"
                           FontSize="16"
                           Margin="15,10"
                           TextChanged="OnPasswordChanged"/>
                </Frame>
                <Label x:Name="PasswordStrengthLabel"
                       TextColor="#8B95A5"
                       FontSize="12"
                       IsVisible="False"/>
            </VerticalStackLayout>

            <!-- Confirm Password Input -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Xác nhận mật khẩu" 
                       TextColor="#E0E6ED" 
                       FontSize="14"
                       FontAttributes="Bold"/>
                <Frame BackgroundColor="#1B2838" 
                       BorderColor="#2D3E50" 
                       CornerRadius="12" 
                       Padding="0"
                       HasShadow="False">
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Nhập lại mật khẩu"
                           PlaceholderColor="#5C6B7A"
                           TextColor="#E0E6ED"
                           IsPassword="True"
                           FontSize="16"
                           Margin="15,10"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Terms Checkbox -->
            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                <CheckBox x:Name="TermsCheckbox"
                         Color="#34D399"/>
                <Label TextColor="#8B95A5" FontSize="12" VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Tôi đồng ý với "/>
                            <Span Text="Điều khoản sử dụng" TextColor="#34D399" TextDecorations="Underline"/>
                            <Span Text=" và "/>
                            <Span Text="Chính sách bảo mật" TextColor="#34D399" TextDecorations="Underline"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel"
                   TextColor="#EF4444"
                   FontSize="14"
                   IsVisible="False"
                   HorizontalOptions="Center"/>

            <!-- Register Button -->
            <Button x:Name="RegisterButton"
                    Text="Đăng ký"
                    BackgroundColor="#34D399"
                    TextColor="#0D1B2A"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="56"
                    Margin="0,20,0,0"
                    Clicked="OnRegisterClicked">
                <Button.Shadow>
                    <Shadow Brush="#34D399" Opacity="0.3" Radius="10" Offset="0,4"/>
                </Button.Shadow>
            </Button>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                             IsRunning="False"
                             IsVisible="False"
                             Color="#34D399"
                             HeightRequest="40"/>

            <!-- Login Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,20">
                <Label Text="Đã có tài khoản?" 
                       TextColor="#8B95A5" 
                       FontSize="14"/>
                <Label Text="Đăng nhập"
                       TextColor="#34D399"
                       FontSize="14"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
